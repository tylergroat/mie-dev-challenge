<%- include('partials/header.ejs') %>

<h1>Edit Game</h1>

<form action="/edit-game/<%= game.game_id %>" method="post">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= game.title %>" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description" rows="5" required><%= game.description %></textarea>

  <label for="min_players">Minimum Players:</label>
  <input type="number" id="min_players" name="min_players" value="<%= game.min_players %>" min="1" max="10" required>

  <label for="max_players">Maximum Players:</label>
  <input type="number" id="max_players" name="max_players" value="<%= game.max_players %>" min="1" max="10" required>

  <label for="category">Category:</label>
  <select id="category" name="category" required>
    <option value="Strategy">Strategy</option>
    <option value="Adventure">Adventure</option>
    <option value="Party">Party</option>
    <option value="Family">Family</option>
    <option value="Other">Other</option>
  </select>

  <button type="submit">Save</button>
</form>

<%- include('partials/footer.ejs') %>
